# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/veil_saas

# JWT Configuration (used by FusionAuth)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Application Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Veil API Configuration
VEIL_API_BASE_URL=http://localhost:2020
VEIL_API_TIMEOUT=10000

# Caddy Configuration
CADDY_MANAGEMENT_URL=http://localhost:2020
CADDY_GATEWAY_URL=http://localhost:2021

# FusionAuth Configuration (REQUIRED for authentication)
FUSIONAUTH_SERVER_URL=http://localhost:9011
FUSIONAUTH_API_KEY=your-fusionauth-api-key
FUSIONAUTH_APPLICATION_ID=your-application-id
FUSIONAUTH_CLIENT_ID=your-client-id
FUSIONAUTH_CLIENT_SECRET=your-client-secret
FUSIONAUTH_TENANT_ID=your-tenant-id
FUSIONAUTH_REDIRECT_URI=http://localhost:3001/auth/callback

# NATS Configuration (for credit consumption tracking)
NATS_URL=nats://localhost:4222

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Stripe Configuration (optional for payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Razorpay Configuration (for payments in India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Email Configuration (optional)
EMAIL_PROVIDER=console
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Logging Configuration (optional)
LOG_LEVEL=info
LOG_FILE_PATH=
LOG_REMOTE_ENDPOINT=
LOG_REMOTE_API_KEY=
LOG_FORMAT=json

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100