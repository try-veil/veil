generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  fusionAuthId  String    @unique
  firstName     String?
  lastName      String?
  roles         Role[]
  apiKeys       ApiKey[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  githubId          String?   @unique
  githubUsername    String?
  githubAccessToken String?
  @@map("users")
}

model Role {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  users       User[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ApiKey {
  id          String    @id @default(uuid())
  key         String    @unique
  name        String
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  apis        API[]
  isActive    Boolean   @default(true)
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model API {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  baseUrl     String
  apiKeys     ApiKey[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
