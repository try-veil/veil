generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum HttpMethod {
  GET
  POST
  PUT
  DELETE
  PATCH
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  fusionAuthId      String   @unique
  firstName         String?
  lastName          String?
  roles             Role[]
  apiKeys           ApiKey[]
  apis              Api[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  githubId          String?  @unique
  githubUsername    String?
  githubAccessToken String?

  @@map("users")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ApiKey {
  id        String    @id @default(uuid())
  key       String    @unique
  name      String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  apiPathId String?
  apiPath   ApiPath?  @relation(fields: [apiPathId], references: [id])
}

model Api {
  id          String    @id @default(uuid())
  name        String
  description String?
  baseUrl     String
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  paths       ApiPath[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, name])
}

model ApiPath {
  id          String     @id @default(uuid())
  apiId       String
  api         Api        @relation(fields: [apiId], references: [id])
  path        String
  method      HttpMethod
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  apiKeys     ApiKey[]
}
